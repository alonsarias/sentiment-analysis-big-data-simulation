# ----------------------------------------
# Kafka Configuration
# ----------------------------------------
# Connection settings for the Kafka message broker
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
# Topic name for the comments stream
KAFKA_TOPIC=comments
# Consumer group identifier for tracking message consumption
KAFKA_CONSUMER_GROUP_ID=example-consumer-group
# Strategy for reading messages (earliest reads from beginning of topic)
KAFKA_AUTO_OFFSET_RESET=earliest
# Maximum seconds to wait for message sending acknowledgment
KAFKA_PRODUCER_TIMEOUT=10

# ----------------------------------------
# HBase Configuration
# ----------------------------------------
# Connection settings for HBase NoSQL database
HBASE_HOST=localhost
HBASE_PORT=9090
# Table name for storing raw comments
HBASE_TABLE_NAME=comments
# Column family for organizing comment data fields
HBASE_COLUMN_FAMILY=data
# Resilience settings for HBase connection
HBASE_MAX_RETRIES=5
HBASE_RETRY_DELAY=5

# ----------------------------------------
# MySQL Configuration
# ----------------------------------------
# Connection settings for MySQL relational database
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=sentiment_analysis
MYSQL_USER=user
MYSQL_PASSWORD=password
# Authentication method for MySQL 8+
MYSQL_AUTH_PLUGIN=mysql_native_password
# Resilience settings for MySQL connection
MYSQL_MAX_RETRIES=5
MYSQL_RETRY_DELAY=5

# ----------------------------------------
# Sentiment Analysis Configuration
# ----------------------------------------
# HuggingFace transformer model identifier for sentiment analysis
SENTIMENT_MODEL_NAME=tabularisai/multilingual-sentiment-analysis
# Maximum token length for text input to the model
SENTIMENT_MAX_LENGTH=512

# ----------------------------------------
# Application Settings
# ----------------------------------------
# Logging verbosity (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
# Random delay range (seconds) between producing messages to simulate real traffic
PRODUCER_MIN_DELAY=0.5
PRODUCER_MAX_DELAY=3.0
# Path to JSON file containing sample comments
COMMENTS_FILE_PATH=./data/comments.json